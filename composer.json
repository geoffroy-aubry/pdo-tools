    "keywords":    ["PDO", "fixture", "database", "mock", "PHPUnit"],
    "type":        "library",
    "license":     "LGPL-3.0+",
    "authors": [
        {
            "name":  "Geoffroy Aubry",
            "email": "geoffroy.aubry@free.fr"
        }
    ],
    "require": {
        "ext-PDO":                   "*",
        "geoffroy-aubry/helpers":    "1.*",
        "php":                       ">=5.3.3",
        "psr/log":                   "~1.0"
    },
    "require-dev": {
        "apigen/apigen":             "~2.8",
        "phpmd/phpmd":               "~1.4",
        "phpunit/phpunit":           "3.7.*",
        "sebastian/phpcpd":          "*",
